{
  "name": "portfolio",
  "type": "module",
  "scripts": {
    "build": "npm run build:website && npm run build:infra",
    "build:infra": "cd infra && npm ci && npm run build",
    "build:website": "cd website && npm ci && npm run build",
    "lint": "npm ci && eslint .",
    "lint:fix": "npm ci && eslint . --fix",
    "test": "cd infra && npm run test",
    "test:update": "cd infra && npm run test:update"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "eslint": "^9.12.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "typescript-eslint": "^8.8.0"
  }
}
