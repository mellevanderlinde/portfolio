{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "outputs": [".next/**", "out/**", "src/**"]
    },
    "deploy": {
      "dependsOn": ["^deploy", "build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "diff": {
      "dependsOn": ["^diff", "build"]
    },
    "lint": {},
    "lint:fix": {},
    "test": {
      "dependsOn": ["^test", "build"]
    },
    "test:update": {
      "dependsOn": ["^test:update", "build"]
    }
  }
}
